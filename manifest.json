{
  "manifest_version": 3,
  "name": "YouTube Focus",
  "version": "1.0.1",
  "description": "Hide YouTube Shorts and Playables to reduce distractions and focus on long-form content that matters to you.",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 