{
  "manifest_version": 3,
  "name": "YouTube Focus",
  "version": "1.0",
  "description": "Hide YouTube Shorts to help you focus on longer form content",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 